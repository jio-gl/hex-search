# Ethereum Node Configuration
INFURA_API_KEY=your_infura_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=9042
DB_KEYSPACE=hex_search
DB_USERNAME=
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Ethereum Configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETH_START_BLOCK=0
ETH_BATCH_SIZE=10

# Bitcoin Configuration
BTC_RPC_URL=https://btc.getblock.io/mainnet/
BTC_RPC_USER=your-rpc-user
BTC_RPC_PASSWORD=your-rpc-password
BTC_START_BLOCK=0
BTC_BATCH_SIZE=10

# Crawler Configuration
MAX_BLOCKS_PER_BATCH=100
BATCH_INTERVAL_MS=12000  # 12 seconds between batches
CRAWLER_CONCURRENCY=5
CRAWLER_INTERVAL=60000
CRAWLER_START_BLOCK=0  # 0 means start from latest block
BLOCK_CONFIRMATION_BLOCKS=12
RETRY_DELAY_MS=30000
BLOCK_TIME_MS=12000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/crawler.log
ERROR_LOG_FILE_PATH=logs/crawler-error.log
